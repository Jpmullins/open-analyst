{
  "name": "open-analyst",
  "version": "2.0.0",
  "description": "Remote-first analyst application with headless agent runtime",
  "scripts": {
    "dev": "npm run dev:stack",
    "dev:web": "vite --host 0.0.0.0 --port 5173",
    "serve:headless": "node scripts/headless-server.js",
    "dev:stack": "sh -c 'node scripts/headless-server.js & vite --host 0.0.0.0 --port 5173'",
    "build": "vite build",
    "build:container": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.77",
    "@anthropic-ai/claude-code": "^2.1.42",
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/ws": "^8.18.1",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.1",
    "dotenv": "^17.3.1",
    "glob": "^10.3.10",
    "katex": "^0.16.27",
    "lucide-react": "^0.468.0",
    "ngrok": "^5.0.0-beta.2",
    "openai": "^6.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "uuid": "^11.0.3",
    "ws": "^8.19.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "author": "Justin Mullins (ARLIS - Applied Research Laboratory for Intelligence and Security)",
