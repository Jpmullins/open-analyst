{
  "name": "open-analyst",
  "version": "2.0.0",
  "description": "Desktop Agent application with sandboxed environment for AI Agent interaction",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "npm run download:node && npm run prepare:python && npm run build:wsl-agent && npm run build:lima-agent && npm run build:mcp && vite",
    "dev:container": "OPEN_ANALYST_NO_ELECTRON=1 vite --host 0.0.0.0 --port 5173",
    "serve:headless": "node scripts/headless-server.js",
    "dev:container:stack": "sh -c 'node scripts/headless-server.js & OPEN_ANALYST_NO_ELECTRON=1 vite --host 0.0.0.0 --port 5173'",
    "dev:container:full": "npm run download:node && npm run prepare:python && npm run build:wsl-agent && npm run build:lima-agent && npm run build:mcp && OPEN_ANALYST_NO_ELECTRON=1 vite --host 0.0.0.0 --port 5173",
    "build": "npm run build:app",
    "build:app": "npm run download:node && npm run prepare:gui-tools && npm run prepare:python:all && npm run build:wsl-agent && npm run build:lima-agent && npm run build:mcp && tsc && vite build",
    "build:container": "OPEN_ANALYST_NO_ELECTRON=1 vite build",
    "build:wsl-agent": "tsc -p src/main/sandbox/wsl-agent/tsconfig.json",
    "build:lima-agent": "tsc -p src/main/sandbox/lima-agent/tsconfig.json",
    "build:mcp": "node scripts/bundle-mcp.js",
    "download:node": "node scripts/download-node.js",
    "prepare:gui-tools": "node scripts/prepare-gui-tools.js",
    "prepare:python": "node scripts/prepare-python.js",
    "prepare:python:all": "node scripts/prepare-python.js --all",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "rebuild": "node -e \"const {execSync}=require('node:child_process'); const v=require('electron/package.json').version; execSync('npm rebuild better-sqlite3 --runtime=electron --target='+v+' --disturl=https://electronjs.org/headers',{stdio:'inherit'})\""
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.77",
    "@anthropic-ai/claude-code": "^2.1.7",
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/ws": "^8.18.1",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^4.0.1",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "glob": "^10.3.10",
    "katex": "^0.16.27",
    "lucide-react": "^0.468.0",
    "ngrok": "^5.0.0-beta.2",
    "openai": "^6.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "uuid": "^11.0.3",
    "ws": "^8.19.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^31.7.7",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.28.8",
    "vitest": "^4.0.17"
  },
  "author": "Justin Mullins (ARLIS - Applied Research Laboratory for Intelligence and Security)",
  "license": "UNLICENSED",
  "optionalDependencies": {
    "bufferutil": "^4.1.0",
    "utf-8-validate": "^6.0.6"
  }
}
